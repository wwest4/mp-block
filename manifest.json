{
    "manifest_version": 2,
    "name": "mp-block",
    "description": "block users in MP",
    "version": "0.0.1",

    "browser_action": {
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-32.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html",
        "default_title": "mp-block (for mountainproject web UI)"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["https://*.mountainproject.com/*"],
            "js": [
                "jquery-3.4.1.js",
                "mp-block.js"
            ]
        }
    ],

    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",

        "https://*.mountainproject.com/*"
    ]
}
